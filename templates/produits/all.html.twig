{% extends 'layout.html.twig' %}

{% block title %}{{ parent() }} Boutique{% endblock %}

{% block content %}
<div class="text-center mb-5">
    <h4>Liste des produits</h4>
</div>
<div class="row mt-5">
    <div class="col-md-2 justify-content-center pt-4">
      <ul class="list-group">
        {% for categorie in categories %}
            <a class="text-decoration-none" href="{{ path('produits_categorie', {id: categorie.id})}}"><li class="list-group-item btn btn-primary text-center">{{ categorie.nom }}</li></a>
        {% endfor %}
       </ul>
</div>
<div class="col m-d-10 justify-content-center">
    {% for produit in produits %} 
    <div class="row col-md-8 justify-content-center" >
        <div class="col card mb-3 " style="max-width: 800px;">
            <div class="row g-0">
                <div class="col-md-6 justify-content-center">
                    <img src="{{ asset('photosProduits/' ~ produit.photo) }}" class="img-fluid rounded-start"
                        alt="{{ produit.titre }}">
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <h4 class="card-title"><a href="{{ path('produit_show', {id: produit.id}) }}">{{produit.titre}}</a></h4>
                        <h6>categorie : {{ produit.categorie.nom }}</h5>
                        <h6 class="text-muted">ajouté le : {{ produit.dateEnregistrement | date('d/m/Y') }}</h6>
                        <h5>couleur : {{ produit.couleur }}</h5>
                        <h5>taille : {{ produit.taille }}</h5>
                        <h5>il en reste {{ produit.stock }}</h5>
                        <h5>prix : <strong>{{ produit.prix }} €</strong></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>   
    {% endfor %}

</div>
</div>

{% endblock %}

